<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/player_layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_marginTop="45dp"
        android:id="@+id/image_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/playiconstock"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/sng_player"
        android:layout_below="@id/image_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/song_name"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_marginTop="6dp"
        android:id="@+id/art_player"
        android:layout_below="@id/sng_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_centerHorizontal="true"
        android:text="@string/artist_name"/>


    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/art_player"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_play_circle_outline" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/play_button"
        android:layout_marginLeft="76dp"
        android:src="@drawable/ic_fast_rewind" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/play_button"
        android:layout_marginRight="76dp"
        android:src="@drawable/ic_fast_forward" />



</RelativeLayout>